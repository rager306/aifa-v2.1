{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/app/**/*.{ts,tsx,js,jsx}",
      "**/components/**/*.{ts,tsx,js,jsx}",
      "**/lib/**/*.{ts,tsx,js,jsx}",
      "**/hooks/**/*.{ts,tsx,js,jsx}",
      "**/providers/**/*.{ts,tsx,js,jsx}",
      "**/config/**/*.{ts,tsx,js,jsx}",
      "**/types/**/*.{ts,tsx,js,jsx}",
      "!**/node_modules",
      "!**/.next",
      "!**/out",
      "!**/build",
      "!**/dist",
      "!**/.serena",
      "!**/next-env.d.ts",
      "!**/*.tsbuildinfo",
      "!**/knip-report.json",
      "!**/snyk-test-report.json",
      "!**/semgrep-report.json",
      "!**/semgrep.sarif",
      "!**/.vercel",
      "!**/coverage",
      "!**/public/**/*.js",
      "!**/*.config.js",
      "!**/*.config.mjs"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "attributePosition": "auto",
    "bracketSpacing": true,
    "includes": ["**"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "attributePosition": "auto"
    },
    "globals": ["React", "JSX"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn",
        "noDoubleEquals": "error",
        "noDebugger": "error",
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["log"]
          }
        }
      },
      "style": {
        "noUnusedTemplateLiteral": "warn",
        "useConst": "error",
        "useTemplate": "warn"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "complexity": {
        "noForEach": "off",
        "useLiteralKeys": "warn"
      },
      "a11y": {
        "useAltText": "warn",
        "useButtonType": "warn",
        "useKeyWithClickEvents": "warn"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/components/ai-elements/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": ["**/app/**/*.tsx", "**/components/**/*.tsx"],
      "javascript": {
        "formatter": {
          "jsxQuoteStyle": "double"
        }
      }
    }
  ]
}
